{
    "name": "colly",
    "version": "0.0.1",
    "description": "Open Source Web-based Website URL Collection app",
    "keywords": [
        "web",
        "website",
        "collect",
        "url",
        "manage"
    ],
    "homepage": "https://github.com/jarne/colly",
    "bugs": {
        "url": "https://github.com/jarne/colly/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Jarne",
        "url": "https://github.com/jarne"
    },
    "main": "app.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/jarne/colly.git"
    },
    "scripts": {
        "start": "node app.js",
        "dev": "nodemon app.js",
        "test": "mocha --recursive --parallel",
        "test-ci": "mocha --recursive --exit --reporter mocha-junit-reporter --reporter-options mochaFile=./test-results/mocha/junit.xml",
        "test-coverage": "c8 --all --reporter html yarn test",
        "lint": "eslint .",
        "lint-ci": "eslint --format junit --output-file ./lint-results/eslint/junit.xml .",
        "format": "prettier --write \"**/*.{js,json,html,css,scss,yml,md}\""
    },
    "dependencies": {
        "bcrypt": "^5.1",
        "capture-website": "^3.2",
        "dotenv": "^16.3",
        "express": "^4.18",
        "jsonwebtoken": "^9.0",
        "mongoose": "^7.4",
        "passport": "^0.6",
        "passport-jwt": "^4.0",
        "passport-local": "^1.0",
        "validator": "^13.11"
    },
    "devDependencies": {
        "c8": "^8.0",
        "chai": "^4.3",
        "chai-http": "^4.4",
        "cors": "^2.8",
        "eslint": "^8.48",
        "mocha": "^10.2",
        "mocha-junit-reporter": "^2.2",
        "morgan": "^1.10",
        "nodemon": "^3.0",
        "prettier": "^3.0"
    },
    "type": "module",
    "packageManager": "yarn@4.0.2"
}
